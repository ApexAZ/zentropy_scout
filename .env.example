# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=zentropy_scout
DATABASE_USER=zentropy_user
# SECURITY: The default password is for development only.
# In production (ENVIRONMENT=production), you MUST set a secure password.
# The app will refuse to start with the default password in production.
DATABASE_PASSWORD=zentropy_dev_password

# API Configuration
# 0.0.0.0 binds to all network interfaces (required for Docker containers)
# Security: For local development without Docker, use 127.0.0.1 to prevent
# external access. In production, use a reverse proxy with TLS termination.
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration (Security)
# Comma-separated list of allowed origins for cross-origin requests
# Default: http://localhost:3000 (Next.js dev server)
# Production: Set to your actual frontend domain(s)
ALLOWED_ORIGINS=["http://localhost:3000"]

# LLM Configuration
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GOOGLE_API_KEY=your_google_key_here

# Provider Configuration (REQ-009 ยง6.2)
LLM_PROVIDER=claude
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
DEFAULT_MAX_TOKENS=4096
DEFAULT_TEMPERATURE=0.7
LLM_MAX_RETRIES=3

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# Authentication (REQ-006 ยง6.1)
# Local-first mode: Set DEFAULT_USER_ID to your user UUID (no token required)
# Hosted mode: Set AUTH_ENABLED=true and use JWT tokens
DEFAULT_USER_ID=
AUTH_ENABLED=false

# Rate Limiting (Security)
# Format: "count/period" (e.g., "10/minute", "100/hour", "1000/day")
# Limits LLM endpoints to prevent abuse and cost explosion
RATE_LIMIT_LLM=10/minute
RATE_LIMIT_EMBEDDINGS=5/minute
RATE_LIMIT_ENABLED=true
